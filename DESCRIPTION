Package: adverseimpact
Title: Statistical and Practical Significance Testing for Adverse Impact in Selection Decisions
Version: 0.0.2.00
Authors@R: c(
    person("Dragos", "Iliescu", email = "dragos.iliescu@fpse.unibuc.ro", role = c("cre", "aut", "ctb")),
    person("George", "Gunnesch-Luca", email = "george.gunnesch-luca@fau.de", role = c("aut", "ctb")),
    person("Cristian", "Opariuc-Dan", email = "cristian.opariuc@fpse.unibuc.ro", role = c("aut", "ctb")),
